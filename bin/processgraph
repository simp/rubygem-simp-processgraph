#!/usr/bin/env ruby
## run the process
##
## get the command line parameters
require 'fileutils'
require 'optparse'
require 'socket'
require 'simp-processgraph'

infile = nil
raw = false
outfile = nil
site_name = nil
con_type = 0
$debug = false

port_con_type = 0 # port [T]
proc_con_type = 1 # process [R]
ip_con_type = 2 # ip [I]

optsparse = OptionParser.new do |opts|
  opts.banner = 'Usage: processgraph -s sitename [options]'
  opts.banner += "\nNote: use full pathname for input files and directories\n"
  opts.banner += "\n      dir path is set for output files and directories\n"
  opts.on('-h', '--help', 'Help') do
    puts opts
    exit
  end
  opts.on('-s', '--site NAME', 'Site Name (required!)') do |s|
    #    puts "site name is #{s}"
    site_name = s.strip
  end
  opts.on('-i', '--input FILENAME', 'Input file or directory name') do |i|
    #    puts "input filename is #{i}"
    infile = i.strip
  end
  outmsg = 'Input raw file or directory name piped from ss -npatuw'
  opts.on('-r', '--raw RAWFILENAME', outmsg) do |r|
    #    puts "input filename is #{r}"
    infile = r.strip
    raw = true
  end
  outmsg = 'Connection type (T = Port, R = Process, I = IP)'
  opts.on('-c', '--connection NAME', outmsg) do |c|
    case c
    when 'I', 'i'
      con_type = ip_con_type
    when 'R', 'r'
      con_type = proc_con_type
    when 'T', 't'
      con_type = port_con_type
    else
      puts 'Invalid connection type'
      puts "graph level option is #{con_type}"
      exit
    end
  end
  # connection option
  msg = 'File name root (directory is predetermined)'
  opts.on('-o', '--output FILENAME', msg) do |o|
    puts "output filename is #{o}" if $debug
    outfile = o.strip
  end
end
# OptionParser

optsparse.parse!

unless site_name
  puts 'Missing argument -s'
  puts optsparse.banner
  exit
end

outdir = File.join('processgraph_output', site_name)
FileUtils.mkdir_p(outdir) unless File.directory?(outdir)

Dir.chdir(outdir) do
  the_graph = ProcessList.new(infile, outfile, raw)
  the_graph.process_data(site_name, con_type)
end
puts "your results are in dir #{outdir}/"
